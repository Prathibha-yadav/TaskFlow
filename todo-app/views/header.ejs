<h1 class="text-2xl font-semibold text-gray-800"><%= i18next.t('todo_app_title') %></h1>

<form id="languageForm" method="POST" action="/changeLanguage" class="max-w-xs mx-auto">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

    <select name="language" onchange="this.form.submit()" class="block w-full px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        <option value="en" <%= lang === 'en' ? 'selected' : '' %>>English</option>
        <option value="es" <%= lang === 'es' ? 'selected' : '' %>>Spanish</option>
        <option value="ja" <%= lang === 'ja' ? 'selected' : '' %>>Japanese</option>
    </select>
</form> <br>

